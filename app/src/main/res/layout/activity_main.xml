<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity"
tools:ignore="MissingClass">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="340dp"
    tools:ignore="MissingConstraints">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="70dp"
      android:background="@drawable/rec1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="194dp"
      android:layout_height="139dp"
      app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
      app:srcCompat="@drawable/gg2" />


</androidx.constraintlayout.widget.ConstraintLayout>
<EditText
    android:id="@+id/edit1"
    android:layout_width="330dp"
    android:layout_height="70dp"
    android:layout_marginTop="30dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:drawableStart="@drawable/icon6"
    android:drawablePadding="17dp"
    android:hint="Username"
    android:textSize="20sp"
    android:background="@drawable/rec2"
    android:ems="10"
    android:inputType="textPersonName"
    android:textColorHint="@color/green"
    />
<EditText
    android:id="@+id/edit2"
    android:layout_width="330dp"
    android:layout_height="70dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:drawableStart="@drawable/icon1"
    android:drawablePadding="17dp"
    android:hint="Email"
    android:textSize="20sp"
    android:background="@drawable/rec2"
    android:ems="10"
    android:inputType="textPersonName"
    android:textColorHint="@color/green"
    />
<EditText
    android:id="@+id/edit3"
    android:layout_width="330dp"
    android:layout_height="70dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:drawableStart="@drawable/icon2"
    android:drawablePadding="17dp"
    android:hint="Password"
    android:textSize="20sp"

    android:background="@drawable/rec2"
    android:ems="10"
    android:inputType="textPassword"
    android:textColorHint="@color/green"
    />



<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/rec3"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:padding="4dp"
    android:paddingStart="64dp"
    android:drawableEnd="@drawable/icon3"
    android:textSize="22sp"
    android:layout_marginTop="14dp"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:text="Sign Up" />
<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Already have an account? Log in"
    android:textColor="@color/green"
    android:layout_marginTop="10dp"
    android:textAlignment="center"
    android:layout_marginLeft="90dp"
    android:textSize="14sp"
    android:textStyle="bold"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="120dp"
      android:layout_height="70dp"
      android:layout_weight="1"
      app:srcCompat="@drawable/icon4" />

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="120dp"
      android:layout_height="70dp"
      android:layout_weight="1"
      app:srcCompat="@drawable/icon5" />

</LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>